{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true,
    "incremental": false,
    "target": "es6",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "removeComments": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
